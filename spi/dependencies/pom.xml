<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly.model.test</groupId>
        <artifactId>wildfly-legacy-spi-parent</artifactId>
        <version>1.0.0.Alpha3-SNAPSHOT</version>
    </parent>

    <artifactId>wildfly-legacy-spi-dependencies</artifactId>

    <name>WildFly: Legacy Test SPI Dependencies</name>
    <description>
      Current wildfly-core classes used by the SPI to avoid needing to bring in classes from WildFly (the consumer)
      to avoid circular dependencies
    </description>
    <packaging>pom</packaging>

    <properties>
      <wildfly.current.version>1.0.0.Alpha5-SNAPSHOT</wildfly.current.version>
      <wildfly.lib.directory>${project.build.sourceDirectory}/../../../lib</wildfly.lib.directory>
    </properties>

    <dependencies>
      <!-- 
         Jars built from current wildfly-core needed to get things to compile. We cannot add normal maven 
         dependencies on these since they are in SNAPSHOT and also this would cause circular dependencies.
         WildFly core is a consumer of this project. 
       -->
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-controller</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-controller-${wildfly.current.version}.jar</systemPath>
      </dependency>
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-core-model-test-framework</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-core-model-test-framework-${wildfly.current.version}.jar</systemPath>
      </dependency>
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-deployment-repository</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-deployment-repository-${wildfly.current.version}.jar</systemPath>
      </dependency>
      <!-- 
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-host-controller</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-host-controller-${wildfly.current.version}.jar</systemPath>
      </dependency>
       -->
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-model-test</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-model-test-${wildfly.current.version}.jar</systemPath>
      </dependency>
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-server</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-server-${wildfly.current.version}.jar</systemPath>
      </dependency>
      <dependency>
         <groupId>org.wildfly.model.test.direct</groupId>
         <artifactId>wildfly-subsystem-test-framework</artifactId>
         <version>1.0</version>
         <scope>system</scope>
         <systemPath>${wildfly.lib.directory}/wildfly-subsystem-test-framework-${wildfly.current.version}.jar</systemPath>
      </dependency>
       
       <!-- Other non wildfly-core dependencies needed to get things to compile -->
      <dependency>
         <groupId>org.jboss</groupId>
         <artifactId>jboss-dmr</artifactId>
      </dependency>
      <dependency>
         <groupId>org.jboss.msc</groupId>
         <artifactId>jboss-msc</artifactId>
      </dependency>
      <dependency>
         <groupId>org.jboss</groupId>
         <artifactId>jboss-vfs</artifactId>
      </dependency>
      
    </dependencies>

    <build>
        <plugins>
        </plugins>
    </build>

</project>
